         {% for guardian in guardianes %}
            <div class="guardian">

                <div class="fotoGuardian">
                    <picture>
                        <img src="assets/img/user.png" alt="" class="cara">
                    </picture>
                </div>
               
                <div class="nombreGuardian">
                    <p>{{guardian.autor}}</p>
                </div>
                <div class="ubicacionGuardian">
                    <p>{{guardian.ciudad}}</p>
                </div>
                <div class="opinionGuardian">
                    <p>-{{guardian.comentario}}</p>
                </div>
            </div>
            {% endfor %}
        </article>
